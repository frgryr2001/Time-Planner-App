<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:orientation="horizontal"
    android:id="@+id/reminderRowLayout"
    android:background="@drawable/line_through">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvReminderRowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textSize="32sp"
            android:textColor="@color/text_dark"/>
        <TextView
            android:id="@+id/tvReminderRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng học phí"
            android:textSize="14sp"
            android:textColor="@color/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvReminderRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T.7, 1 Th1, 2022"
            android:textSize="20sp"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_dark"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>