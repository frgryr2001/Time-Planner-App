<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Home Fragment"
        android:textSize="30sp" />

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        app:menu_colorNormal="@color/primary"
        app:menu_labels_cornerRadius="3dp"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_left"
        app:menu_labels_position="right"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_left"
        app:menu_labels_textSize="14sp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/ibMoveToAddReminderPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"
            app:fab_colorNormal="@color/white"
            app:fab_label="Thêm nhắc nhở" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/ibMoveToAddShedulePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_event_note_24"
            app:fab_colorNormal="@color/white"
            app:fab_label="Thêm hoạt động lịch trình" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/ibMoveToAddMissionPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_event_note_24"
            app:fab_colorNormal="@color/white"
            app:fab_label="Thêm nhiệm vụ mới" />
    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>